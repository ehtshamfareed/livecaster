<%- include('.\\' + '../_layouts/header'); %>


    <div class="container">


        <h1><%=title%></h1>

        <form method="POST" action="/users/register">
         
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" name="username" class="form-control" value="<%= username %>"
                        placeholder="Username">
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="Email" class="form-control" value="<%= email%>" placeholder="Email">
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" value="<%= password%>"
                        placeholder="Password">
                </div>

                <div class="form-group">
                    <label>Confirm_Password</label>
                    <input type="password" name="password2" class="form-control" value=""
                        placeholder="Confirm Password">
                </div>

                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="number" name="phone_number" class="form-control" value="<%= phone_number%>"
                        placeholder="phone_number">
                </div>
                <div class="form-group">
                    <label for="">User Categories</label>
                <select name="user_category"  class="form-control">
                    <option value="admin">admin</option>
                    <option value="reporter">reporter</option>
                </select>
            </div>
                <div class="form-group">
                    <label for="">Address</label>
                    <textarea name="address" class="form-control" cols="10" rows="05"
                        placeholder="Address"><%= address %></textarea>
                </div>


                <div class="form-group">
                    <label for="">Profile Picture</label>
                    <input type="file" class="form-control" name="p_picture" id="img">
                    <img src="#" id="imagePreview" alt="">
     
                </div>

                <div class="form-group">
                    <label>Validation_code</label>
                    <input type="text" name="v_code" class="form-control" value="<%= v_code%>"
                        placeholder="Validation_code">
                </div>

                <div class="form-group">
                    <label>Validation_Status</label>
                    <input type="text" name="v_status" class="form-control" value="<%= v_status%>"
                        placeholder="Validation_Status">
                </div>

                <div class="form-group">
                    <label>Register Date</label>
                    <input type="text" name="l_date" class="form-control" value="<%=r_date%>" placeholder="Register_Date">
                </div>


                <button type="submit" class="btn .btn-default" style="margin-bottom: 10px; border-color: black;"><b>Register</b></button>
           
        </form>
        <script>

            function readURL(input) {
                
                for (var i = 0; i < input.files.length; i++) {
                    if (input.files && input.files[i]) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $("#imagePreview").attr('src', e.target.result).width(100).height(100);
                        }
                        reader.readAsDataURL(input.files[i]);
                    }
                }
            }
        
            $("#img").change(function () {
                readURL(this);
            });
        </script>
    </div>





<%- include('.\\' + '../_layouts/footer'); %>